        <img src="~/Content/img/Ciudad.jpg" width="300" height="200">
        <p><a class="btn btn-primary" @Html.ActionLink("Ciudades", "Index", "Cities")></a></p>
    </div>
    <div class="col-md-4">
        <h2>Sobre mi</h2>
